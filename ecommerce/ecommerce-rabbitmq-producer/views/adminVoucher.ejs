    <nav id="sidebar" style="margin-top:120px;">
        <ul class="list-unstyled components">
            <li class="active">
                <a href="/admin/dashboard" class="dashboard"><i class="material-icons">dashboard</i><span>Dashboard</span></a>
            </li>


            <li class="dropdown">
                <a href="#homeSubmenu1" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                    <i class="material-icons">aspect_ratio</i><span>Manage</span></a>
                <ul class="collapse list-unstyled menu" id="homeSubmenu1">
                    <li>
