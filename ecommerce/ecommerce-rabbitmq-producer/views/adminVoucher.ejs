    <!-- Page Content  -->
    <div id="content" style="margin-top:110px ;">
        <div class="main-content">

          

            <div class="row ">
                <div class="col-lg-12 col-md-12">
                    <div class="card" style="min-height: 485px">
                        <div class="card-header card-header-text">
                            <h4 class="card-title" style="font-size: 30px; text-align: center;">VOUCHER</h4>

                        </div>
                        <div class="row">
                            <div class="container-fluid">
                                <div class="row">
                                    <button class="btn btn-secondary ml-auto btn3 mb-4" href="#myModalVoucherAdd" data-toggle="modal"
                                        style="margin-right:60px;">Create new voucher</button>
                                </div>
                            </div>
                        </div>
            
                        <div class="card-content table-responsive">
                            <table class="table table-hover">
                                <thead class="text-primary">
                                    <tr>
                                        <th>STT</th>
                                        <th>Voucher Code</th>
                                        <th>Discount value</th>
                                        <th>Quantity</th>
                                        <th>Start at</th>
                                        <th>Expire at</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                               
                                <tbody>
                                    <%vouchers.forEach((voucher,index)=>{%>
                                        <tr>
                                            <td><%=index+1%></td>
                                            <td><%=voucher.voucherCode%></td>
                                            <td><%=voucher.discount*100%></td>
                                            <td><%=voucher.quantity%></td>
                                            <td><%=voucher.startAt%></td>
                                            <td><%=voucher.expireAt%></td>
                                            <td>
                                                <a class="btn btn1" href="#myModalVoucherEdit" data-toggle="modal" onclick="fillInfor('<%=voucher.voucherCode%>','<%=voucher.quantity%>','<%=voucher.startAt%>','<%=voucher.expireAt%>','<%=voucher.discount%>')">Edit</a>
                                                <button class="btn btn2" onclick ="deleteVoucher('<%=voucher.voucherCode%>')">Delete</button>

                                            </td>
                                        </tr>
                                    <%})%>
                                </tbody>
                            </table>
                            <div class="row g-0  justify-content-center">
                                <div class="d-flex flex-wrap ">
                                    <ul class="pagination">
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
                                id="myModalVoucherEdit" class="modal fade ">
                                <div class="modal-dialog modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="title">Edit voucher</h4>
                                            <button aria-hidden="true" data-dismiss="modal" class="close"
                                                type="button">×</button>

                                        </div>
                                        <div class="modal-body ">
                                            <div class="form-floating">
                                                <label for="ID">Voucher code</label>
                                                <input type="text" class="form-control" id="id" disabled>
                                            </div>
                                            <div class="form-floating">
                                                <label for="ID">Discount value(%)</label>
                                                <input type="text" class="form-control" id="discountValue" >
                                            </div>
                                            <div class="form-floating">
                                                <label for="ID">Quantity</label>
                                                <input type="text" class="form-control" id="quantity" >
                                            </div>
                                            <div class="form-floating">
                                                <label for="ID">Start at</label>
                                                <input type="date" class="form-control" id="start" >
                                            </div>
                                            <div class="form-floating">
                                                <label for="ID">Exprie At</label>
                                                <input type="date" class="form-control" id="expire" >
                                            </div>

                                            <div class="d-grid mb-4 mt-4" style="border-radius:5px ;">
                                                <button type="submit" class="btn4 btn-primary" onclick ="submitEditVoucher()">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
                            id="myModalVoucherAdd" class="modal fade ">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="title">New voucher</h4>
                                        <button aria-hidden="true" data-dismiss="modal" class="close"
                                            type="button">×</button>

                                    </div>
                                    <div class="modal-body ">
                                        <div class="form-floating">
                                            <label for="ID">Voucher code</label>
                                            <input type="text" class="form-control" id="idAdd" >
                                        </div>
                                        <div class="form-floating">
                                            <label for="ID">Discount value(%)</label>
                                            <input type="text" class="form-control" id="discountValueAdd" >
                                        </div>
                                        <div class="form-floating">
                                            <label for="ID">Quantity</label>
                                            <input type="text" class="form-control" id="quantityAdd" >
                                        </div>
                                        <div class="form-floating">
                                            <label for="ID">Start at</label>
                                            <input type="date" class="form-control" id="startAdd" >
                                        </div>
                                        <div class="form-floating">
                                            <label for="ID">Exprie At</label>
                                            <input type="date" class="form-control" id="expireAdd" >
                                        </div>

                                        <div class="d-grid mb-4 mt-4" style="border-radius:5px ;">
                                            <button type="submit" class="btn4 btn-primary" onclick ="submitNewVoucher()">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>







    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
