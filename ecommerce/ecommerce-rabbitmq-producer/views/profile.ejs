                    </div>
                    
                </div>

            </div>
     
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <!-- <form action="/profile" method="post"> -->
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">First name</label>
                                <input class="form-control fc" name="firstName" id="inputFirstName" type="text"
                                    placeholder="Enter your first name" value="<%=user.firstName%>">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Last name</label>
                                <input class="form-control fc" name="lastName" id="inputLastName" type="text"
                                    placeholder="Enter your last name" value="<%=user.lastName%>">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (gender )-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputGender">Gender</label>
                                <select class="form-control fc" aria-label="Default select example" id="inputGender"
                                    name="gender">
                                    <option selected value="<%=user.gender%>">
                                        <%=user.gender%>
                                    </option>
                                    <%if(user.gender=='male'){%>
                                        <option value="female">female</option>
                                        <%}else{%>
                                            <option value="male">male</option>
                                            <%}%>
                                </select>
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputBirthday">Birthday</label>
                                <input class="form-control fc" id="inputBirthday" type="text"
                                    placeholder="Enter your birthday" name="dob" value="<%=user.format%>">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input class="form-control fc" id="inputEmailAddress" type="email"
                                placeholder="Enter your email address" name="email" value="<%=user.email%>" disabled>
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1" for="inputPhone">Phone number</label>
                            <input class="form-control fc" id="inputPhone" type="text"
                                placeholder="Enter your phone number" name="phone" value="<%=user.phone%>">
                            <p id="phoneAlert" class="small mb-1" style="color:#DD0000"></p>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="city">City/Province</label>
                                <!-- <input class="form-control fc" id="inputPhone" type="text"
                                        placeholder="Enter your city" name="city" value="<%=user.address.province.name%>"> -->
                                <select class="form-control fc" aria-label="Default select example" id="provinceSelect"
                                    name="province" onchange="onchangeProvince()">
                                    <option selected value="<%=user.address.province.ID%>">
                                        <%=user.address.province.name%>
                                    </option>
                                </select>

                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="district">District</label>
                                <select class="form-control fc" aria-label="Default select example" id="districtSelect"
                                    name="district" onchange="onchangeDistrict()">
                                    <option selected value="<%=user.address.district.ID%>">
                                        <%=user.address.district.name%>
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPhone">Ward</label>
                                <select class="form-control fc" aria-label="Default select example" id="wardSelect"
                                    name="ward">
                                    <option selected value="<%=user.address.ward.ID%>">
                                        <%=user.address.ward.name%>
                                    </option>
                                </select>
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="house-number">Address</label>
                                <input class="form-control fc" id="house-number" type="text"
                                    placeholder="Enter your house number" name="specify"
                                    value="<%=user.address.specify%>">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="button" id="submit-btn"
                            onclick="checkIsUpdate(event)">Save changes</button>
                        <!-- </form> -->
                    </div>
                </div>
            </div>
        </div>
    </div>

