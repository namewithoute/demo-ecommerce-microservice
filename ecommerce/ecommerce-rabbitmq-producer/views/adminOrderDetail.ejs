    <!-- Page Content  -->
    <div id="content" style="margin-top:110px ;">
        <div class="main-content">
            <%const formatter = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'VND',
              
              });%>

            <div class="row ">
                <div class="col-lg-12 col-md-12">
                    <div class="card" style="min-height: 485px">
                        <div class="card-header card-header-text">
                            <h4 class="card-title" style="font-size: 30px; ">ORDER DETAIL</h4>
                        </div>
                        <div class="container">
                            <div class="form-floating col-md-5   ">
                                <label for="Name">Customer </label>
                                <input type="text" class="form-control" id="name" value="<%=order.name%>" disabled>
                            </div>

                            <div class="form-floating col-md-5   ">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="email" value="<%=order.email%>" disabled>
                            </div>

                            <div class="form-floating col-md-5   ">
                                <label for="Phone">Phone number </label>
                                <input type="text" class="form-control" id="phone" value="<%=order.phone%>" disabled>
                            </div>

                            <div class="form-floating col-md-5   ">
                                <label for="Name">Order ID </label>
                                <input type="text" class="form-control" id="orderID" value="<%=order.orderID%>"
                                    disabled>
                            </div>
                            <div class="form-row col-md-6  ">
                                <div class="form-floating col-md-5   ">
                                    <label for="Name">Create at </label>
                                    <input type="text" class="form-control" id="createAt" value="<%=order.createAt%>"
                                        disabled>
                                </div>
                                <div class="form-floating col-md-5   ">
                                    <label for="Delivery">Delivery status</label>
                                    <input type="text" class="form-control" id="deliveryStatus"
                                        value="<%=order.status%>" disabled>
                                </div>
                            </div>
                            <div class="form-row col-md-6  ">
                                <div class="form-floating col-md-5   ">
                                    <label for="Payment">Payment method</label>
                                    <input type="text" class="form-control" id="paymentMethod"
                                        value="<%=order.paymentMethod%>" disabled>
                                </div>
                                <div class="form-floating col-md-5   ">
                                    <label for="Payment">Payment status</label>
                                    <input type="text" class="form-control" id="paymentStatus" value="<%=order.isPaid%>"
                                        disabled>
                                </div>
                            </div>
                            <div class="form-floating col-md-5   ">
                                <label for="Cancel">Order canceled </label>
                                <input type="text" class="form-control" id="cancelOrder"
                                    value="<%=order.isCancel ? 'Yes':'No'%>" disabled>
                            </div>
                            <div class="form-floating col-md-8   ">
                                <label for="Phone">Shipping address </label>
                                <input type="text" class="form-control" id="shippingAddress"
                                    value="<%=order.shippingAddress%>" disabled>
                            </div>



                            <div class="row item-list">
                                <div class="form-floating col-sm-2">
                                    <label for="Size">Subtotal</label>
                                    <input type="text" max="3" class="form-control" id="subtotal"
                                        value="<%=formatter.format(order.subtotal)%>" disabled>
                                </div>
                                <div class="form-floating col-sm-2">
                                    <label for="Size">Shipping Fees</label>
                                    <input type="text" max="3" class="form-control" id="shippingFee"
                                        value="<%=formatter.format(order.shippingFee)%>" disabled>
                                </div>
                                <div class="form-floating col-sm-2">
                                    <label for="Size">Voucher code</label>
                                    <input type="text" max="3" class="form-control" id="discount"
                                        value="<%=(order.discount.voucherCode)%>" disabled>
                                </div>
                                <div class="form-floating col-sm-2">
                                    <label for="Size">Discount value</label>
                                    <input type="text" max="3" class="form-control" id="discount"
                                        value="<%=(order.discount.value*100)%>%" disabled>
                                </div>
                                <div class="form-floating col-sm-3">
                                    <label for="color">Total</label>
                                    <input type="text" class="form-control" id="total" value="<%=formatter.format(order.total)%>"
                                        disabled>
                                </div>
                            </div>


                            <%order.itemList.forEach((item)=>{%>
                                <div class="row item-list">
                                    <div class="form-floating col-sm-1">
                                        <label for="Size">Item ID</label>
                                        <input type="text" max="3" class="form-control" id="size" value="<%=item.id%>"
                                            disabled>
                                    </div>
                                    <div class="form-floating col-sm-8">
                                        <label for="Size">Item name</label>
                                        <input type="text" max="3" class="form-control" id="itemName"
                                            value="<%=item.name%>" disabled>
                                    </div>
                                    <div class="form-floating col-sm-1">
                                        <label for="Size">Size</label>
                                        <input type="text" max="3" class="form-control" id="size" value="<%=item.size%>"
                                            disabled>
                                    </div>
                                    <div class="form-floating col-sm-1">
                                        <label for="color">Color</label>
                                        <input type="text" class="form-control" id="color" value="<%=item.color%>"
                                            disabled>
                                    </div>
                                    <div class="form-floating col-sm-1">
                                        <label for="Quantily">Quantity</label>
                                        <input type="number" class="form-control" id="quantity"
                                            value="<%=item.quantity%>" disabled>
                                    </div>
                                </div>
                                <%})%>
                                    <div class="d-grid mb-4 mt-4" style="border-radius:5px ;">
                                        <button class="btn4 btn-primary"   href="#myModal" data-toggle="modal">Edit</button>
                                    </div>
                        </div>
                    </div>
                </div>
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal"
                    class="modal fade ">
                    <div class="modal-dialog modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="title">Edit status order</h4>
                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>

                            </div>
                            <div class="modal-body ">
                                <div class="form-floating">
                                    <label for="ID">Order ID</label>
                                    <input type="text" class="form-control" id="id" value="<%=order.orderID%>" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="sel1">Action:</label>
                                    <select class="form-control" id="changeStatus">
                                        <option value="" selected></option>
                                        <option value="Cancel">Cancel order</option>
                                        <option value="Done">Order Completion </option>
                                        <option value="Confirm">Confirm order</option>
                                        <option value="Packing">Packing</option>
                                        <option value="Shipping">Delivery</option>
                                    </select>
                                </div>

                                <div class="d-grid mb-4 mt-4" style="border-radius:5px ;">
                                    <button  class="btn4 btn-primary" onclick="submitEditStatus('<%=order.orderID%>')">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>









